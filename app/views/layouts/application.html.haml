!!!
%html
  %head
    %title G10Rails
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag    "bootstrap", :media => "all" 
    = stylesheet_link_tag    "bootstrap-responsive", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = link_to 'Log out', destroy_user_session_path, :method => :delete
    = yield

%form.form-horizontal
  .control-group
    %label.control-label{:for => "inputEmail"} Email
    .controls
      %input#inputEmail{:placeholder => "Email", :type => "text"}
  .control-group
    %label.control-label{:for => "inputPassword"} Password
    .controls
      %input#inputPassword{:placeholder => "Password", :type => "password"}
  .control-group
    .controls
      %label.checkbox
        %input{:type => "checkbox"}
          Remember me
      %button.btn{:type => "submit"} Sign in
