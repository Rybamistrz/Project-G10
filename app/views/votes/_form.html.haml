= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vote.errors.count, "error")} prohibited this vote from being saved:"
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :vote_belongs_to_all
    = f.text_field :vote_belongs_to_all
  .field
    = f.label :vote_belongs_to_profesors
    = f.text_field :vote_belongs_to_profesors
  .field
    = f.label :vote_time
    = f.time_select :vote_time
  .actions
    = f.submit 'Save'
